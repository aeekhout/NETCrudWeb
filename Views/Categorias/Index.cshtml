@model IEnumerable<ControlIngresoGastos.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Categorias</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nueva...</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombrecategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombrecategoria)
            </td>
            <td>
                @if (item.tipo == "IN")
                {
                    <p>Ingreso</p>
                }
                else
                {
                    <p>Gasto</p>
                }

            </td>
            <td>
                @if (item.estado == true)
                {
                    <p class="btn btn-primary">Activo</p>
                }
                else
                {
                    <p class="btn btn-outline-danger">Inactivo</p>
                }
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
